extends layout

block content
  header.container-fluid
    .container-fluid.text-center
      h2.super-title Join Us #[br]
        span(style={ 'font-size' : '50%' }) (employers only)
    .form-container.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
      form(action="/signup", method="post")
        .form-group
          label(for="companyName")  Company Name:
          input.form-control(type="text", name="name", placeholder="Company Name" required)     
        .form-group
          label(for="email")  Email Address:
          input.form-control(type="email", name="email", placeholder="Email Address" required)
        .form-group
          label(for="password") Password:
          input.form-control(type="password", name="password" required)
        .form-group
          label(for="password") Confirm Password:
          input.form-control(type="password", name="confirmPassword" required)
        button.btn.btn-jobbatical(type="submit") Sign Up