doctype html
html
  head
    meta(charset='utf-8')
    title Jobbatical Clone
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    link(rel="stylesheet", href="/vendors/css/font-awesome.min.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Raleway:400,700")
    link(rel="stylesheet", href="/vendors/css/bootstrap.min.css")
    link(rel="stylesheet", href="/vendors/css/trumbowyg.min.css")
    link(rel="stylesheet", href="/css/style.css" type="text/css")
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Home
        
        .collapse.navbar-collapse#bs-example-navbar-collapse-1
          ul.nav.navbar-nav
            li
              a(href="/explore") Explore Jobs
            if user
              li
                a(href="/job-posts") Job Posts
          ul.nav.navbar-nav.navbar-right
            if !user
              li
                a(href="/login") Login
              li
                a(href="/signup") Signup
            else
              li
                a(href="/job-form") Post Job
              li
                a(href="/signout") Sign Out

    block content

    footer.container-fluid
      .row
        .col-sm-2.col-sm-offset-2
          h4 For Talent
          ul.list-unstyled
            li
              a(href="/") Home
            li
              a(href="/explore") Explore Jobs
        .col-sm-2.col-sm-offset-1
          h4 For Employers
          ul.list-unstyled
            if !user
              li
                a(href="/login") Login
              li
                a(href="/signup") Signup
            else
              li
                a(href="/job-form") Post Jobs
              li
                a(href="/signout") Sign Out
        .col-sm-2.col-sm-offset-1
          h4 About Us
          ul.list-unstyled
            li.social-icons
              a(href="" target="_blank")
                i.fa.fa-github.fa-lg(aria-hidden=true)   Github
            li.social-icons
              a(href="" target="_blank")
                i.fa.fa-envelope.fa-lg(aria-hidden=true)   Email
      .row.team-info
        .col-xs-12.col-sm-4.col-sm-offset-2
          span.small !{'&copy;'} devGson
            |  
            a(href="") devGson Project
    
    script(src="/vendors/js/jquery-3.2.1.min.js")
    script(src="/vendors/js/bootstrap.min.js")
    script(src="/vendors/js/trumbowyg.min.js")
    script(src="/vendors/js/code.js")
            

