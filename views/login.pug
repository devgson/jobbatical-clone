extends layout

block content
  header.container-fluid
    .container-fluid.text-center
      h2.super-title Log In #[br]
        span(style={ 'font-size' : '50%' }) (employers only)
    .form-container.col-sm-6.col-md-4.col-lg-4.col-md-offset-4.col-sm-offset-3
      form(action="/login", method="post")
        .form-group
          label(for="inputEmail") Email Address:
          input.form-control(type="email", placeholder="Email Address", name="email" required)
        .form-group
          label(for="inputPassword") Password:
          input.form-control(type="password", name="password" required)
        button.btn.btn-jobbatical(type="submit") Login